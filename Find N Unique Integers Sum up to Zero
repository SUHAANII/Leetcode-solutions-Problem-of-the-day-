question: Given an integer n, return any array containing n unique integers such that they add up to 0.

code:

class Solution {
public:
    // Function to generate a vector of n integers that sum to zero
    vector<int> sumZero(int n) {
        // Create a vector of size n to store the result
        vector<int> res(n);

        // Calculate the first element such that the sum can be zero
        // This element is set to the negative sum of the first (n-1) natural numbers
        res[0] = n * (1 - n) / 2;

        // Fill the rest of the vector with integers from 1 to (n-1)
        for (int i = 1; i < n; ++i) {
            res[i] = i; // Assign the value i to the ith position
        }

        // Return the resulting vector
        return res;
    }
};
